{
    "compilerOptions": {
        "outDir": "./dist",
        "declarationDir": "./dist",
        "declaration": true,
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "paths": {
            "@shared/*": ["./shared/*"]
        },
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true
    },
    "exclude": [
        "./dist",
        "./node_modules",
        "./vite.config.ts",
    ]
}
